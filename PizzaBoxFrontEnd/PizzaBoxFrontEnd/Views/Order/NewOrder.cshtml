<h1>Add Pizzas to your new Order @Model.OrderId</h1>

<div>
    <h4>Meat Pizza</h4>
    <form method="post" asp-action="Create" asp-controller="OrderPizza">
        <input type="hidden" id="orderid" name="orderid" value="@Model.OrderId" />
        <label for="pizzaid">Choose a size</label>
        <select id="pizzaid" name="pizzaid">
            <option value="3">Small</option>
            <option value="1">Medium</option>
            <option value="5">Large</option>
        </select>
        <label for="quantity">Input Quantity</label>
        <input type ="number" id="quantity" name="quantity" />
        <input type="submit" value="Add To Order"/>
    </form>
</div>

